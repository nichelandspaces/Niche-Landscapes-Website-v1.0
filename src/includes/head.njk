<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Niche Landscapes -
    {{ title }}</title>
  <meta name="description" content="{{ description }}">

  <!-- Favicon -->
  <link rel="icon" href="{{ root }}assets/img/logo-green.png">

  <!-- Goole fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="crossorigin">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500&display=swap" rel="stylesheet">

  <!-- Material icons -->
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,200,0,0" rel="stylesheet">

  <!-- CSS -->
  <link rel="stylesheet" href="{{ root }}assets/css/style.css">

  {%- if ('docs' in page.url) or ('style' in page.url) %}
