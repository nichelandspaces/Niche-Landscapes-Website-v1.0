    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/themes/prism-okaidia.min.css">
  {% endif %}

  <!-- JS -->
  <script src="{{ root }}assets/js/bootstrap.js" defer="defer"></script>
  <script src="{{ root }}assets/js/lightbox.js" defer="defer"></script>
  <script src="{{ root }}assets/js/scripts.js" defer="defer"></script>
